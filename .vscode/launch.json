{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "program": "${file}",
      "request": "launch",
      "type": "node",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "skipFiles": [
        "${workspaceRoot}/node_modules/**/*.js",
        "<node_internals>/**"
      ],
      "smartStep": true
    },
    {
      "name": "Jest: Debug All",
      "smartStep": true,
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "${workspaceRoot}/node_modules/**/*.js",
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--config",
        "${workspaceRoot}/jest.config.js"
      ],
      "console": "integratedTerminal",
      "disableOptimisticBPs": true,
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Jest: Debug Current File",
      "smartStep": true,
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "${workspaceRoot}/node_modules/**/*.js",
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--config",
        "${workspaceRoot}/jest.config.js",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    }
  ]
}
